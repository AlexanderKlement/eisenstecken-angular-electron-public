{
  "root": true,
  "ignorePatterns": [
    "app/**/*",
    // ignore nodeJs files
    "dist/**/*",
    "release/**/*"
  ],
  "overrides": [
    {
      "files": [
        "*.ts"
      ],
      "parserOptions": {
        "parserOptions": {
          "ecmaVersion": 2017
        },
        "env": {
          "es6": true
        },
        "project": [
          "./tsconfig.serve.json",
          "./src/tsconfig.app.json",
          "./src/tsconfig.spec.json",
          "./e2e/tsconfig.e2e.json"
        ],
        "createDefaultProgram": true
      },
      "rules": {
        "prefer-template": 0,
        "prefer-arrow/prefer-arrow-functions": 0,
        "@typescript-eslint/quotes": [
          "warn",
          "double",
          {
            "avoidEscape": true,
            "allowTemplateLiterals": true
          }
        ]
      }
    },
    {
      "files": [
        "*.html"
      ],
      "rules": {
      }
    }
  ]
}
